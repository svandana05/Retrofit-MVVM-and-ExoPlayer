<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_height="match_parent" tools:context=".HoroDetailActivity">

    <RelativeLayout
        android:background="#ffffff"
        android:elevation="4dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            tools:src="@drawable/ic_launcher_background"
            android:id="@+id/horoImage"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <TextView
            android:id="@+id/horoTitle"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            tools:text="Horo Title"
            android:layout_toRightOf="@id/horoImage"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/horoDate"
            android:layout_toRightOf="@id/horoImage"
            android:layout_below="@id/horoTitle"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat"
            tools:text="Horo Date"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
    </RelativeLayout>
    <View
        android:background="#50000000"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:padding="10dp"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/colorAccent"
            android:id="@+id/title_personal_life"
            android:text="Personal Life"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:paddingRight="10dp"
            android:paddingLeft="20dp"
            android:id="@+id/description_personal_life"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="5dp"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:padding="10dp"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/colorAccent"
            android:id="@+id/title_profession"
            android:text="Profession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:paddingRight="10dp"
            android:paddingLeft="20dp"
            android:id="@+id/description_profession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="5dp"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:padding="10dp"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/colorAccent"
            android:id="@+id/title_health"
            android:text="Health"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:paddingRight="10dp"
            android:paddingLeft="20dp"
            android:id="@+id/description_health"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="5dp"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:padding="10dp"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/colorAccent"
            android:id="@+id/title_travel"
            android:text="Travel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:paddingRight="10dp"
            android:paddingLeft="20dp"
            android:id="@+id/description_travel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="5dp"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:padding="10dp"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/colorAccent"
            android:id="@+id/title_luck"
            android:text="Luck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:paddingLeft="20dp"
            android:id="@+id/description_luck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="5dp"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:padding="10dp"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/colorAccent"
            android:id="@+id/title_emotions"
            android:text="Emotions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:paddingRight="10dp"
            android:paddingLeft="20dp"
            android:id="@+id/description_emotions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="5dp"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </LinearLayout>
    </ScrollView>
</LinearLayout>